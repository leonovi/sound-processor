{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "skipLibCheck": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
